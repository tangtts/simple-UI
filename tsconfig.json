{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "paths": {
      "utils/*":["./src/utils/*"],
      "@/*":["src/*"],
      "types/*":["src/types/*"],
      "store/*":["src/store/*"],
      "components/*":["packages/components/*"],
    },
    "types": ["element-plus/global"]
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue",
    "src/*.ts",
    "**/*.tsx",
    "**/**.ts"
  ]
}
